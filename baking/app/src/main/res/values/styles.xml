<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/widget_text_color</item>
    </style>

    <style name="ListItemWidget" parent="AppTheme">
        <item name="android:gravity">start</item>
        <item name="android:background">@color/widget_list_item_color</item>
        <item name="android:contentDescription">@string/widget_empty</item>
        <item name="android:textColor">@color/widget_text_color</item>
        <item name="android:textSize">@dimen/widget_list_item_text_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">@dimen/widget_list_item_padding</item>
        <item name="android:layout_margin">@dimen/widget_list_item_margin</item>
    </style>

    <style name="item_step_text" parent="AppTheme">
        <item name="android:textColor">@color/widget_text_color</item>
        <item name="android:textSize">@dimen/item_step_text_size</item>
    </style>

    <style name="button_step_fragment_style" parent="AppTheme">
        <item name="android:background">@drawable/round_button_fragment</item>
        <item name="android:layout_margin">@dimen/step_fragment_button_margin</item>
        <item name="android:padding">@dimen/step_fragment_button_padding</item>
        <item name="android:textSize">@dimen/step_fragment_button_text_size</item>
    </style>

    <style name="step_description_fragment_style" parent="AppTheme">
        <item name="android:textSize">@dimen/step_fragment_description_text_size</item>
        <item name="color">@color/text_color</item>
        <item name="android:padding">@dimen/step_fragment_description_padding</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="splash" parent="AppTheme">
        <item name="android:windowBackground">
            @drawable/background_splash
        </item>
    </style>
</resources>
